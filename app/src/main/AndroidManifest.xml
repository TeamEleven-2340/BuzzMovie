<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.gaTech.teamElevenProject">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Buzz Movie"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="edu.gaTech.teamElevenProject.MainActivity"
            android:label="Team Eleven Project">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="edu.gaTech.teamElevenProject.LoginActivity"
            android:label="Log In" />
        <activity
            android:name="edu.gaTech.teamElevenProject.MovieSearch"
            android:label="Movie Search" />
        <activity
            android:name="edu.gaTech.teamElevenProject.RegisterActivity"
            android:label="Registration"
            android:noHistory="true"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="edu.gaTech.teamElevenProject.ProfileActivity"
            android:label="Profile"
            android:noHistory="true"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="edu.gaTech.teamElevenProject.EditProfileActivity"
            android:label="Edit Profile"
            android:noHistory="true"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="edu.gaTech.teamElevenProject.ItemListActivity"
            android:label="Movie Lists"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="edu.gaTech.teamElevenProject.MovieDetailDisplay"
            android:label="Movie Details"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="edu.gaTech.teamElevenProject.RecommendationActivity"
            android:label="Recommendations"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="edu.gaTech.teamElevenProject.AdminSearch"
            android:label="@string/title_activity_admin_search"
            android:noHistory="true"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="edu.gaTech.teamElevenProject.UserDetailDisplay"
            android:label="@string/title_activity_user_detail_display"
            android:noHistory="true"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
